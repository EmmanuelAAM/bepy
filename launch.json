    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app", // Replace "app:app" with "<filename>:<app_instance_name>" if different
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "jinja": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "redirectOutput": false
        }
    ]
}
